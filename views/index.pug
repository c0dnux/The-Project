doctype html
html
    head
        block head
            title #{title}
            meta(charset="utf-8")
            meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")

            // Bootstrap CSS

            link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
            link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")

            //- link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css")
            // Custom Stylesheets
            link(rel="stylesheet", href="/css/main.css")
            noscript
                link(rel="stylesheet", href="/css/noscript.css")

            style.
                .my-content {
                    background-color: rgb(255, 255, 255);
                    padding: 100px 30px 200px;
                }
                .card-text{
                    padding-bottom:  15px;
                }

    body.landing.is-preload
        // Page Wrapper
        #page-wrapper

            // Header
            header#header.alt
                h1 
                    a(href="/") Thread & Trend
                nav#nav
                    ul
                        li.special
                            a.menuToggle(href="#menu") 
                                span Menu
                            #menu
                                ul
                                    if user  
                                        li 
                                            a(href="/") Home
                                        li 
                                            a#logout-btn(href="") Log Out
                                        li 
                                            a(href="elements.html") Profile
                                                i.fas.fa-user  
                                        li
                                            a(href="#") Cart
                                                i.fas.fa-shopping-cart
                                         
                                    else 
                                        li 
                                            a(href="/") Home  
                                        li 
                                            a(href="/auth") Sign Up
                                        li 
                                            a(href="/auth") Log In     

            // Banner
            section#banner
                .inner
                    h2 Thread & Trend
                    p 
                        | From Fabric to Fashion  
                        br
                        | Just for You



        // Main Content
        .my-content.container-fluid.mt-4
            .row.row-cols-1.row-cols-md-2.row-cols-lg-4.g-4
                each product in products
                    .col
                        .card
                            img.card-img-top(src=`./img/products/${product.image}`, alt=product.name)
                            .card-body
                                // Title and Category in the same row
                                .d-flex.justify-content-between.align-items-center
                                    h5.card-title.mb-0= product.name
                                    small.text-muted #{product.category.name}  

                                // Price and Stock in the same row
                                .d-flex.justify-content-between.align-items-center
                                    p.card-text.mb-0 â‚¦#{product.price} 
                                if user
                                   a.btn.btn-primary(href=`/product/${product.id}`) DETAILS
                                else
                                   a.btn.btn-primary(href=`/auth`) LOGIN TO ORDER

        // Footer
        include _footer
        

        // Scripts
        script(
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js",
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz",
            crossorigin="anonymous"
        )
        script(src="./js/jquery.min.js")
        script(src="./js/jquery.scrollex.min.js")
        script(src="./js/jquery.scrolly.min.js")
        script(src="./js/browser.min.js")
        script(src="./js/breakpoints.min.js")
        script(src="./js/util.js")
        script(src="./js/main.js")
        script(type="module" src="./js/index.js")
        script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
        
