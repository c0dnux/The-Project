doctype html
html
    head
        title Spectral by HTML5 UP
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")

        // Bootstrap CSS

        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")

        //- link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css")
        // Custom Stylesheets
        link(rel="stylesheet", href="./css/main.css")
        noscript
            link(rel="stylesheet", href="./css/noscript.css")

        style.
            .my-content {
                background-color: rgb(255, 255, 255);
                padding: 100px 30px 200px;
            }

    body.landing.is-preload
        // Page Wrapper
        #page-wrapper

            // Header
            header#header.alt
                h1 
                    a(href="/") Thread & Trend
                nav#nav
                    ul
                        li.special
                            a(href="#menu", class="menuToggle") 
                                span Menu
                            #menu
                                ul
                                    li: a(href="index.html") Home
                                    li: a(href="generic.html") Generic
                                    li: a(href="elements.html") Elements
                                    li: a(href="#") Sign Up
                                    li: a(href="./login.html") Log In

            // Banner
            section#banner
                .inner
                    h2 Thread & Trend
                    p 
                        | From Fabric to Fashion  
                        br
                        | Just for You

        // Main Content
        .my-content.container-fluid.mt-4
            .row.row-cols-1.row-cols-md-2.row-cols-lg-4.g-4
                each product in products
                    .col
                        .card
                            img.card-img-top(src=`./img/products/${product.image}`, alt=product.name)
                            .card-body
                                // Title and Category in the same row
                                .d-flex.justify-content-between.align-items-center
                                    h5.card-title.mb-0= product.name
                                    small.text-muted #{product.category.name}  
                                
                                // Price and Stock in the same row
                                .d-flex.justify-content-between.align-items-center
                                    p.card-text.mb-0 Price: ##{product.price}  
                                    if product.stock > 0
                                        p.text-success.mb-0 In Stock (#{product.stock})
                                    else
                                        p.text-danger.mb-0 Out of Stock  
                                
                                if product.sizes.length
                                    p.card-text Sizes: #{product.sizes.join(", ")}
                                p.card-text Color: #{product.color}
                                a.btn.btn-primary(href="#") DETAILS

                                                



        // Footer
        footer#footer
            ul.icons
                li: a(href="#", class="icon brands fa-twitter") 
                    span.label Twitter
                li: a(href="#", class="icon brands fa-facebook-f") 
                    span.label Facebook
                li: a(href="#", class="icon brands fa-instagram") 
                    span.label Instagram
                li: a(href="#", class="icon brands fa-dribbble") 
                    span.label Dribbble
                li: a(href="#", class="icon solid fa-envelope") 
                    span.label Email

            ul.copyright
                li &copy; Untitled
                li Design: 
                    a(href="http://html5up.net") HTML5 UP

        // Scripts
        script(
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js",
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz",
            crossorigin="anonymous"
        )
        script(src="./js/jquery.min.js")
        script(src="./js/jquery.scrollex.min.js")
        script(src="./js/jquery.scrolly.min.js")
        script(src="./js/browser.min.js")
        script(src="./js/breakpoints.min.js")
        script(src="./js/util.js")
        script(src="./js/main.js")
