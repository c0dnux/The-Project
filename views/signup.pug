extends base


block content
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css")
    style.
        body {
            font-family: "Roboto", sans-serif;
            background-color: #f8f9fa;
            }
        .enter-card {
            font-family: 'Poppins', sans-serif;
             margin-top: 216px;  
            }
        .enter-card h3 {
            font-weight: 600;
            }
        .form-label {
            font-weight: 400;
            }
        .password-container {
            position: relative;
            }
        .toggle-password {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            }
        .password-icon {
            margin-top: 16px;
            }
        .text-center a {
            color: rgba(var(--bs-link-color-rgb), var(--bs-link-opacity, 1));
            text-decoration: underline;
            border-bottom: dotted 0;
            }
        body div .d-flex{
            margin: 0 0 300px;
        }
        #header{
           margin: 0 0 300px; 
        }
    .d-flex.justify-content-center.align-items-center.vh-100.mt-5
            .enter-card.card.p-4.shadow(style="width: 350px; margin-top: 80px;")
                #signup-form
                    h3.text-center(style="color: #858585;") Sign Up
                    form#user-signup(data-page="auth")
                        .mb-2
                            label.form-label(for="signup-name" style="color: black;") Name
                            input#signup-name.form-control(type="text" required)
                        .mb-2
                            label.form-label(for="signup-email" style="color: black;") Email
                            input#signup-email.form-control(type="email" required)
                        .mb-2.password-container
                            label.form-label(for="signup-password" style="color: black;") Password
                            input#signup-password.form-control(type="password" required)
                            i.bi.bi-eye.toggle-password.password-icon(data-target="signup-password")
                        .mb-2.password-container
                            label.form-label(for="signup-confirm-password" style="color: black;") Confirm Password
                            input#signup-confirm-password.form-control(type="password" required)
                            i.bi.bi-eye.toggle-password.password-icon(data-target="signup-confirm-password")
                        .mb-2
                            label.form-label(for="signup-phone" style="color: black;") Phone Number
                            input#signup-phone.form-control(type="tel" required)
                        .mb-3
                            label.form-label(for="signup-address" style="color: black;") Address
                            input#signup-address.form-control(type="text" required)
                        button.btn.btn-success.w-100(type="submit") Sign Up
                    p.text-center.mt-3 Already have an account? 
                        a.swap-auth(href="/login") Login


