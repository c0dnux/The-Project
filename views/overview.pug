doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title #{title}
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")
        // Custom Stylesheets
        link(rel="stylesheet", href="/css/main.css")
        noscript
            link(rel="stylesheet", href="/css/noscript.css")
        style.
            .container{
                //- background-color: rgb(214, 214, 214);
                //- border-radius:20% ;
            }
            body {
                font-family: "Roboto", sans-serif;
            }
            .badge {
                font-size: 1rem;
                padding: 0.5rem 1rem;
            }
            form {
                padding-bottom: 100px;
            }
    body
        #page-wrapper
            // Header
            include _header

            // Main
            article#main
                header
                    h2 Product Overview

        .container.mt-5
            h2.text-center Order Your Fabric
            .row.justify-content-center
                .col-md-6
                    form
                        .mb-3
                            label.form-label Category
                            input.form-control(type="text" value=`${product.category.name}` readonly)
                        .mb-3
                            label.form-label Name
                            input.form-control(type="text" value=`${product.name}` readonly)
                        .mb-3
                            label.form-label Price
                            input.form-control(type="text" value=`â‚¦${product.price}` readonly)
                        .mb-3
                            label.form-label Color 
                            input.form-control(type="text" value=`${product.color}` readonly)
                        .mb-3
                            label.form-label Select Quantity (Yards/Units)
                            input.form-control(type="number" min="1" value="1")
                        if product.description
                            .mb-3
                                label.form-label Description
                                textarea.form-control(rows="3" readonly) #{product.description}
                        .mb-3
                            label.form-label In Stock
                            input.form-control(type="text" value=`${product.stock}` readonly)
                        if product.sizes.length
                            .mb-3
                                label.form-label Sizes Available
                                .d-flex.gap-2
                                    each size in product.sizes
                                        span.badge.bg-secondary= size
                        button.btn.btn-primary.w-100(type="submit") Add to Cart
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
        script(src="/js/jquery.min.js")
        script(src="/js/jquery.scrollex.min.js")
        script(src="/js/jquery.scrolly.min.js")
        script(src="/js/browser.min.js")
        script(src="/js/breakpoints.min.js")
        script(src="/js/util.js")
        script(src="/js/main.js")
        script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
