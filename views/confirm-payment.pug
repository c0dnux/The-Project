doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Payment Confirmation
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    style.
      body {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        font-family: 'Poppins', sans-serif;
      }
      .card {
        border-radius: 15px;
        padding: 2rem;
        animation: fadeIn 0.8s ease-in-out;
      }
      @keyframes fadeIn {
        from { opacity: 0; transform: scale(0.9); }
        to { opacity: 1; transform: scale(1); }
      }
      .spinner-border {
        width: 3rem;
        height: 3rem;
      }
      .btn {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
        border-radius: 10px;
        transition: all 0.3s ease-in-out;
      }
      .btn:hover {
        transform: translateY(-2px);
      }

  body.d-flex.align-items-center.justify-content-center.vh-100
    .container
      .row.justify-content-center
        .col-md-6
          #confirmation-card.card.shadow-lg.text-center
            h3.mb-3.text-primary Confirming Transaction...
            #loading.spinner-border.text-primary(role="status")
              span.visually-hidden Loading...
            p.mt-3.text-muted Please wait while we verify your payment.

    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    script.
      async function verifyPayment() {
        const urlParams = new URLSearchParams(window.location.search);
        const reference = urlParams.get("reference");

        if (!reference) {
          document.getElementById("confirmation-card").innerHTML = `
            <h3 class="text-danger">Payment Verification Failed</h3>
            <p>No reference provided.</p>
            <a href="/" class="btn btn-primary mt-3">Go Home</a>
          `;
          return;
        }

        try {
          

          const response = await axios.post(`/api/v1/order/confirmation?reference=${reference}`);

          if (response.data.status === "success") {
                       

            document.getElementById("confirmation-card").innerHTML = `
              <h3 class="text-success">Payment Successful üéâ</h3>
              <p class="mb-3">Your payment has been verified successfully.</p>
              <p><strong>Reference:</strong> ${reference}</p>
              <div class="mt-4">
                <a href="/" class="btn btn-success me-2">üè† Home</a>
                <a href="/orders" class="btn btn-info">üì¶ See Orders</a>
              </div>
            `;
          } else {
           
            document.getElementById("confirmation-card").innerHTML = `
            <h3 class="text-danger">Notice ‚ùå</h3>
            <p class="mb-3">${response.data.message}</p>
            <p><strong>Reference:</strong> ${reference}</p>
            <div class="mt-4">
              <a href="/" class="btn btn-danger me-2">üè† Home</a>
              <a href="/orders" class="btn btn-secondary">üì¶ See Orders</a>
            </div>
          `;
          }
        } catch (error) {
             
          document.getElementById("confirmation-card").innerHTML = `
            <h3 class="text-danger">Payment Failed ‚ùå</h3>
            <p class="mb-3">${error.message || "We couldn't verify your payment."}</p>
            <div class="mt-4">
              <a href="#" class="btn btn-warning me-2" onclick="location.reload();">üîÑ Try Again</a>
              <a href="/" class="btn btn-secondary">üè† Home</a>
            </div>
          `;
        }
      }

      verifyPayment();
